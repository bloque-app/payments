{
  "name": "@bloque/payments-core",
  "version": "0.0.1",
  "description": "Core utilities and types for Bloque Payments.",
  "type": "module",
  "keywords": [
    "bloque",
    "payments",
    "core",
    "utilities"
  ],
  "author": "Nestor Cortina <nexckycort@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "git+https://github.com/bloque-app/bloque-payments.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloque-app/bloque-payments.git",
    "directory": "packages/payments-core"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf node_modules",
    "check": "biome check --write",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@rslib/core": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "typescript": "catalog:"
  }
}
