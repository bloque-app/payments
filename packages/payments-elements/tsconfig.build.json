{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,

    "outDir": "./dist",
    "rootDir": "./src",

    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,

    "declarationDir": "./dist",
    "stripInternal": true,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.stories.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/stories/**/*",
    "node_modules",
    "dist"
  ]
}
