{
  "name": "@bloque/payments",
  "version": "0.0.8",
  "description": "Official Bloque SDK for creating and managing payments and checkouts.",
  "type": "module",
  "keywords": [
    "bloque",
    "payments",
    "sdk",
    "api"
  ],
  "author": "Nestor Cortina <nexckycort@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "git+https://github.com/bloque-app/payments.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloque-app/payments.git",
    "directory": "packages/payments"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prerelease": "bun ../../scripts/prerelease.ts",
    "release": "bun publish --provenance",
    "build": "rslib build",
    "dev": "rslib build --watch",
    "clean": "rm -rf node_modules && rm -rf dist",
    "check": "biome check --write",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@rslib/core": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "typescript": "catalog:"
  }
}
