  "homepage": "https://github.com/bloque-app/bloque-payments#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloque-app/bloque-payments"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@changesets/cli": "2.29.8",
    "lefthook": "^2.0.12",
    "typescript": "catalog:"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@biomejs/biome": "^2.3.9",
      "@rslib/core": "^0.18.4",
      "@types/node": "^24.10.1",
      "@typescript/native-preview": "latest",
      "typescript": "^5.9.3"
    }
  }
